<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Txt_Medicine_name"
                            android:layout_width="263dp"
                            android:layout_height="wrap_content"
                            android:ellipsize="marquee"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/btn_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="40dp"
                            android:layout_toEndOf="@+id/Txt_Medicine_name"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_baseline_info_24" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_med_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:id="@+id/txt_med_shopname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />



                    <TextView
                        android:id="@+id/txt_shop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:lineSpacingExtra="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:visibility="gone"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:id="@+id/txt_Med_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/txt_Med_ml_mg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:id="@+id/txt_Med_stock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/grey_bg" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/Txt_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:ellipsize="marquee"
                        android:text="Shahibag , Ahmedabad"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <RelativeLayout
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/Txt_Med_price"
                            android:layout_width="157dp"
                            android:layout_height="40dp"
                            android:background="@color/white"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:gravity="bottom"
                            android:paddingLeft="@dimen/_5sdp"
                            android:text="hello"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                        <Button
                            android:id="@+id/btn_addto_cart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/roundwhite_10"
                            android:padding="@dimen/_7sdp"
                            android:text="Add to cart"
                            android:textColor="@color/white" />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>